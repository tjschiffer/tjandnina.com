<div data-tj-rsvp class="tj--bg-floral-white tj--padding-vert-5">
  <div class="tj--max-width-1020 tj--margin-hor-auto tj--padding-hor-1 tj--min-height-100vh-minus-nav">
    <div class="tj--font-size-32 tj--text-align-center tj--font-blacksword tj--margin-bottom-1 tj--line-height-1-5">{{ RSVP }}</div>
    <div class="tj--font-size-24 tj--text-align-center tj--font-blacksword tj--margin-bottom-1 tj--line-height-1-5">{{ FindYourInvitation }}</div>
    <div class="tj--margin-top-5 tj--text-align-center tj--line-height-1-5 tj--padding-hor-1 tj--width-half tj--width-full--mob tj--margin-hor-auto">
      <form v-on:submit.prevent="findRsvp">
        <div class="tj-grid-flex tj-grid-flex--wrap tj--width-full">
          <div class="tj-grid-flex__cell-1-2
                      tj-grid-flex__cell-1-1--tab
                      tj-grid-flex
                      tj-grid-flex--align-center
                      tj--padding-hor-1
                      tj--margin-bottom-2">
            <label for="firstName" class="tj--white-space-no-wrap tj--margin-right-1">First Name:</label>
            <div class="tj-grid-flex__cell"><input id="firstname" type="text" class="tj-input tj--width-full" v-model="firstName" required></div>
          </div>
          <div class="tj-grid-flex__cell-1-2
                      tj-grid-flex__cell-1-1--tab
                      tj-grid-flex
                      tj-grid-flex--align-center
                      tj--padding-hor-1
                      tj--margin-bottom-2">
            <label for="lastName" class="tj--white-space-no-wrap tj--margin-right-1">Last Name:</label>
            <div class="tj-grid-flex__cell"><input id="lastname" type="text" class="tj-input tj--width-full" v-model="lastName" required></div>
          </div>
          <div class="tj-grid-flex__cell-1-2
                      tj-grid-flex__cell-1-1--tab
                      tj-grid-flex
                      tj-grid-flex--align-center
                      tj--padding-hor-1
                      tj--margin-bottom-2">
            <label for="zipCode" class="tj--white-space-no-wrap tj--margin-right-1">Zip Code:</label>
            <div class="tj-grid-flex__cell"><input id="zipcode" type="text" class="tj-input tj--width-full" v-model="zipCode" required></div>
          </div>
        </div>
        <div class="tj--text-align-right tj--padding-hor-1">
          <button class="tj-button">Search</button>
        </div>
      </form>
    </div>
  </div>
</div>