<%& styleTag %>
<div class="tj-language-chooser__container
            tj--position-relative
            tj-grid-flex
            tj-grid-flex--align-center
            tj-grid-flex--justify-center
            tj--overflow-hidden">
  <div class="tj-language-chooser__hero-image
              tj--position-absolute
              tj--height-full
              tj--width-full
              tj--z-index-0" style="background-image: url('img/paris.jpg')"></div>
  <div class="tj-language-chooser
              tj-grid-flex
              tj-grid-flex--wrap-mob
              tj--position-relative
              tj--z-index-10
              tj--margin-bottom-5">
    <%# languages %>
    <div class="tj-grid-flex__cell-1-2
                tj-grid-flex__cell-1-1--mob
                tj--padding-20
                tj--padding-15--tab
                tj--padding-vert-10--mob">
      <a href="<% languageLandingPageUrl %>"
         class="tj-language-chooser__language
                tj-grid-flex
                tj-grid-flex--align-center
                tj-grid-flex--justify-center
                tj--border-white-1
                tj--position-relative
                tj--overflow-hidden">
        <div class="tj--position-absolute
                    tj--position-top
                    tj--bg-image-cover
                    tj--height-full
                    tj--width-full"
             style="background-image: url('<% flagPath %>')"></div>
        <div class="tj--position-absolute
                    tj--position-top
                    tj--height-full
                    tj--width-full
                    tj-grid-flex
                    tj-grid-flex--align-center
                    tj-grid-flex--justify-center
                    tj--padding-1">
          <div lang="<% language %>"
              class="tj--font-white
                     tj--font-size-20
                     tj--text-align-center
                     tj--text-decoration-none
                     tj--text-shadow-black"><%& languageMessage %></div>
        </div>
      </a>
    </div>
    <%/ languages %>
  </div>
</div>
