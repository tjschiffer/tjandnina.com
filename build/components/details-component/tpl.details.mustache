<div class="tj--bg-floral-white tj--padding-vert-5">
  <div class="tj--max-width-1020 tj--margin-hor-auto tj--padding-hor-1 tj--min-height-100vh-minus-nav">
    <div class="tj--width-half tj--width-full--mob tj--margin-hor-auto tj--padding-1 tj--bg-white">
      <img class="tj--max-width-full tj--display-block" src="/img/shangri-la.jpg" alt="photo of Shangri La"/>
    </div>
    <div class="tj--margin-top-5 tj--text-align-center tj--line-height-1-5 tj--padding-hor-1 tj--width-half tj--width-full--mob tj--margin-hor-auto">
      <div class="tj--font-size-32 tj--font-blacksword tj--margin-bottom-1">{{ WeddingDay }}</div>
      <div>{{ WeddingDate }}</div>
      <div>Shangri-La Hotel</div>
      <div>Paris</div>
      <div>{{ CocktailAttire }}</div>
    </div>
    {{# SaturdayEvent }}
      <div class="tj--margin-top-2 tj--text-align-center tj--line-height-1-5 tj--padding-hor-1 tj--width-half tj--width-full--mob tj--margin-hor-auto">{{.}}</div>
    {{/ SaturdayEvent }}

    {{# ParisRecommendations }}
    <div class="tj--margin-top-5 tj--text-align-center tj--line-height-1-5 tj--padding-hor-1 tj--width-half tj--width-full--mob tj--margin-hor-auto">
      <div class="tj--font-size-32 tj--font-blacksword tj--margin-bottom-1">Paris Recommendations</div>
      <div class="tj--font-size-24 tj--font-blacksword">Where to stay:</div>
      <ul class="tj--padding-0 tj--margin-0 tj--margin-bottom-4">
        {{# WhereToStay }}
        <li class="tj--list-style-none tj--margin-bottom-1">
          {{{.}}}
        </li>
        {{/ WhereToStay }}
      </ul>

      <div class="tj--font-size-24 tj--font-blacksword">What to eat and drink:</div>
      <ul class="tj--padding-0 tj--margin-0 tj--margin-bottom-4">
        {{# WhereToEatAndDrink }}
          <li class="tj--list-style-none tj--margin-bottom-1">
            {{{.}}}
          </li>
        {{/ WhereToEatAndDrink }}
      </ul>

      <div class="tj--font-size-24 tj--font-blacksword">What to see:</div>
      <ul class="tj--padding-0 tj--margin-0 tj--margin-bottom-4">
        {{# WhatToSee }}
          <li class="tj--list-style-none tj--margin-bottom-1">
            {{{.}}}
          </li>
        {{/ WhatToSee }}
      </ul>
      
    </div>
    {{/ ParisRecommendations }}

    <div class="tj--margin-top-5 tj--text-align-center tj--line-height-1-5 tj--padding-hor-1">
      <div class="tj--font-size-32 tj--font-blacksword tj--margin-bottom-1">Contact</div>
      <div>{{ ContactUs }}</div>
      <div><a href="mailto:tjandnina2019@gmail.com" class="tj--plain-link">tjandnina2019@gmail.com</a></div>
    </div>

  </div>
</div>